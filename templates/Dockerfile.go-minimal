#
# See https://medium.com/@chemidy/create-the-smallest-and-secured-golang-docker-image-based-on-scratch-4752223b7324
#
FROM ghcr.io/jauderho/golang:1.26rc2-alpine3.23@sha256:080cefaa1e867be5bace0dd0f3174337d96c5104008aed57de73a5018b4072f4 as build-env

WORKDIR /go/src/app
ADD . /go/src/app

RUN go get -d -v ./...

RUN go build -o /go/bin/app

FROM gcr.io/distroless/base-debian13@sha256:0e299959b841de2aef4259d411c23826a2276e019a5ffea141245679a1d95b46
COPY --from=build-env /go/bin/app /
CMD ["/app"]
