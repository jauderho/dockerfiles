#
# See https://medium.com/@chemidy/create-the-smallest-and-secured-golang-docker-image-based-on-scratch-4752223b7324
#
FROM ghcr.io/jauderho/golang:1.25.4-alpine3.22@sha256:d05e734fbc49e799f7be117d5e7329831efbb93f34b39b8cf1c59b33dbdd15e8 as build-env

WORKDIR /go/src/app
ADD . /go/src/app

RUN go get -d -v ./...

RUN go build -o /go/bin/app

FROM gcr.io/distroless/base-debian13@sha256:7036888a095283fc1490690c9f15ae84e1489523ff608ff9fa11de8c8c8944c0
COPY --from=build-env /go/bin/app /
CMD ["/app"]
