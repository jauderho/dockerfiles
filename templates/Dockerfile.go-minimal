#
# See https://medium.com/@chemidy/create-the-smallest-and-secured-golang-docker-image-based-on-scratch-4752223b7324
#
FROM ghcr.io/jauderho/golang:1.25.0-alpine3.22@sha256:1ae90e80972dd1058b79bbd887ff651e036fbcfb69c630e13b8599cbcc72083f as build-env

WORKDIR /go/src/app
ADD . /go/src/app

RUN go get -d -v ./...

RUN go build -o /go/bin/app

FROM gcr.io/distroless/base-debian12@sha256:d605e138bb398428779e5ab490a6bbeeabfd2551bd919578b1044718e5c30798
COPY --from=build-env /go/bin/app /
CMD ["/app"]
