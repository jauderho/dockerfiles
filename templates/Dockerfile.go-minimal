#
# See https://medium.com/@chemidy/create-the-smallest-and-secured-golang-docker-image-based-on-scratch-4752223b7324
#
FROM ghcr.io/jauderho/golang:1.25.2-alpine3.22@sha256:dd65a215932ec241d55d6e0c3461d9fb3a7aec167b01f5a51fa22fed9bff1fe6 as build-env

WORKDIR /go/src/app
ADD . /go/src/app

RUN go get -d -v ./...

RUN go build -o /go/bin/app

FROM gcr.io/distroless/base-debian12@sha256:9e9b50d2048db3741f86a48d939b4e4cc775f5889b3496439343301ff54cdba8
COPY --from=build-env /go/bin/app /
CMD ["/app"]
