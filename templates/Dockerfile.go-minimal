#
# See https://medium.com/@chemidy/create-the-smallest-and-secured-golang-docker-image-based-on-scratch-4752223b7324
#
FROM ghcr.io/jauderho/golang:1.25.4-alpine3.22@sha256:b0bd7b65dd567bbc4743a1c83fa853cb4375718c53f762fa2206d205f9f261d7 as build-env

WORKDIR /go/src/app
ADD . /go/src/app

RUN go get -d -v ./...

RUN go build -o /go/bin/app

FROM gcr.io/distroless/base-debian13@sha256:f8425b0781786abafa2712aeddbcf2441b535e594d105f23a02b502d5501057e
COPY --from=build-env /go/bin/app /
CMD ["/app"]
